li(
  ng-class="{ completed: vm.completed.email, passed: vm.passed.email, info: !vm.completed.email, expanded: vm.expanded.submitted }"
)
  section.checkpoint
    .progress
      .percent 6%

      .status Complete

      .day Day 1

    .lead

    .point
      .info !

    .lead-after

    label(ng-hide="vm.completed.email") We sent an email to johndoe@example.com. <br /> Click the link in the email to verify your email address.

    label(ng-show="vm.completed.email") Thanks! Your email is verified.

  a.resend(href="#", ng-hide="vm.completed.email") Re-send Email