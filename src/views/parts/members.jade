.flex.middle.center
  button.clean.point(
    ng-class="{ expanded: vm.expanded[$parent.$parent.$index].events[$index]}"
    ng-click="vm.expanded[$parent.$parent.$index].events[$index] = !vm.expanded[$parent.$parent.$index].events[$index]"
  )
    .icon.plus.hollow

    .icon.minus.hollow

  h1(ng-if="event.members.length == 1") {{event.members.length}} person has joined your project

  h1(ng-if="event.members.length > 1") {{event.members.length}} people have joined your project

time {{event.eventTime | timeLapse}}

event-card-main
  ul.avatars.flex.center
    li(ng-repeat="member in event.userProfiles track by $index")
      avatar(avatar-url="{{member.avatar}}")