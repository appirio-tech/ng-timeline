.flex.middle.center
  button.clean.point(
    ng-class="{ expanded: vm.expanded[event.type]}"
    ng-click="vm.expanded[event.type] = !vm.expanded[event.type]"
  )
    .icon.plus.hollow

    .icon.minus.hollow

  h2 {{ eventTime.createdTime | date : 'MMMM d' }} status report

time {{ event.eventTime | timeLapse }}

event-card-main.transition(
  ng-class="{ 'no-height': !vm.expanded[event.type] }"
  lock-height="no-height"
)
  p {{ event.text || 'no subject' }}

  ul.links
    li(ng-repeat="link in event.links track by $index")

      a(href="{{link.url}}") {{link.url}}

  ul.thumbnails.flex.center
    li(ng-repeat="image in event.images track by $index")
      img(ng-src="{{image.url}}")
