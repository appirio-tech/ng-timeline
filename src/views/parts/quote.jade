.flex.middle.center
  button.clean.point(
    ng-class="{ expanded: vm.expanded[event.type]}"
    ng-click="vm.expanded[event.type] = !vm.expanded[event.type]"
  )
    .icon.plus.hollow

    .icon.minus.hollow

  h2 Quote generated

time {{event.eventTime | timeLapse}}

event-card-main.transition(
  ng-class="{ 'no-height': !vm.expanded[event.type] }"
  lock-height="no-height"
)
  p View quote and accept to continue your project.

  .estimate
    h6 quote

    ul.flex.middle.space-between.stretch
      li.cost
        .range
          ${{ event.price.min }} - ${{ event.price.max }}

        h6 Cost estimate

      li.splitter

      li.duration
        .range
          {{ event.duration.min }} - {{ event.duration.max }} {{ event.duration.unit }}

        h6 Time estimate

  button.action.wider(ng-click="vm.acceptQuote()" ng-if="vm.showAcceptQuoteButton") accept quote
