div(ng-if="event.type == 'SUBMISSION_THREAD_INFO' ")
  ul.header
    li
      .icon

    li
      avatar(avatar-url="{{event.lastMessageInfo.publisherInfo.avatar}}")

    li.name
      p
        a(href="#") {{event.threadInfo.lastMessageInfo.publisherInfo.handle}}

      p.role Project Contributor

    li
      time {{event.lastMessageInfo.createdTime}}

  hr

  p {{event.threadInfo.lastMessageInfo.publisherInfo.handle}} has commented on {{event.submissionThumbnails.length}} submission images.

  ul.submissions
    li(ng-repeat="submission in event.submissionThumbnails")
      .notification {{event.threadInfo.unreadMessageCount}}

      .img

  button.wider.view-all view all comments