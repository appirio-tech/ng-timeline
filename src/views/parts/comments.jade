li.comment.messages.no-progress.completed.passed(ng-repeat="comment in vm.events.launch.comments track by $index")
  section.checkpoint
    .point.comment.icon
      button.count.clean(ng-click="vm.showMessagingWidget = true")
        .notification {{ comment.notification }}

    .lead-after

    label
      avatar(ng-src="{{ comment.avatar }}")

      | {{ comment.handle }} commented on project requirements
