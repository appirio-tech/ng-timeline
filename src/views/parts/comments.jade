.flex.middle.center
  button.clean.point(
    ng-class="{ expanded: vm.expanded[event.type]}"
    ng-click="vm.expanded[event.type] = !vm.expanded[event.type]"
  )
    .icon.plus.hollow

    .icon.minus.hollow

  ul.header.flex.center.middle
    li
      .icon.bubble.smallest

    li
      avatar(avatar-url="{{event.submitter.avatar}}")

    li.name.flex-grow
      p
        a(href="#") {{event.submitter.handle}}

      p.role {{event.submitter.role}}

    li
      time {{event.submissionThreads[event.submissionThreads.length - 1].lastMessageDate | timeLapse}}

event-card-main.transition(
  ng-if="event.submissionThreads.length > 0"
  ng-class="{ 'no-height': !vm.expanded[event.type] }"
  lock-height="no-height"
)

  p(ng-if="event.publishers.length == 1 && !vm.allMessagesRead(event.submissionThreads)") {{event.publishers[0].handle}} has commented on {{event.submissionThreads.length}} submission images.

  p(ng-if="event.publishers.length == 2 && !vm.allMessagesRead(event.submissionThreads)") {{event.publishers[0].handle}} and {{event.publishers[1]}} have commented on {{event.submissionThreads.length}} submission images.

  p(ng-if="event.publishers.length == 1 && vm.allMessagesRead(event.submissionThreads)") {{event.publishers[0].handle}} commented on {{event.submissionThreads.length}} submission images.

  p(ng-if="event.publishers.length == 2 && vm.allMessagesRead(event.submissionThreads)") {{event.publishers[0].handle}} and {{event.publishers[1]}} commented on {{event.submissionThreads.length}} submission images.


  ul.submissions.flex.center(ng-if="vm.allMessagesRead(event.submissionThreads)")
    li(ng-repeat="submission in event.submissionThreads track by $index")
      .notification.absolute(ng-if="submission.unreadMessageCount > 0") {{submission.unreadMessageCount}}

      a(ui-sref="file-detail({projectId: vm.workId, stepId: eventGroup.workStepId, submissionId: event.submissionId, fileId: submission.submissionFileId})")
        img(ng-src="{{submission.thumbnailUrl}}")

  ul.submissions.flex.center(ng-if="!vm.allMessagesRead(event.submissionThreads)")
    li(ng-repeat="submission in event.submissionThreads.filter(vm.messageUnread) track by $index")
      .notification.absolute(ng-if="submission.unreadMessageCount > 0") {{submission.unreadMessageCount}}

      a(ui-sref="file-detail({projectId: vm.workId, stepId: eventGroup.workStepId, submissionId: event.submissionId, fileId: submission.submissionFileId})")
        img(ng-src="{{submission.thumbnailUrl}}")

  button.wider.view-all(ui-sref="submission-detail({projectId: vm.workId, stepId: eventGroup.workStepId, submissionId: event.submissionId})") view all comments
