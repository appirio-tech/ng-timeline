.flex.middle.center
  button.clean.point(
    ng-class="{ expanded: vm.expanded[event.type]}"
    ng-click="vm.expanded[event.type] = !vm.expanded[event.type]"
  )
    .icon.plus.hollow

    .icon.minus.hollow

  h2 Final deliverables

time {{event.eventTime | timeLapse }}

event-card-main
  p {{event.threadInfo.lastMessageInfo.content}}

  ul.submissions
    li(ng-repeat="submission in event.submissionThreads track by $index")
      img.img(ng-src="{{submission.thumbnailUrl}}")

  button.action.wider view prototype

  button.wider share link