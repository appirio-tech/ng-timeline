ul.header.flex.center.middle
  li
    .icon.envelope.smallest

  li
    avatar(avatar-url="{{event.lastMessageInfo.publisherInfo.avatar}}")


  li.name.flex-grow
    p
      a(href="#") {{event.lastMessageInfo.publisherInfo.handle}}


    p.role {{event.lastMessageInfo.publisherInfo.role}}

  li
    time {{event.eventTime | timeLapse}}

main.transition(
  ng-class="{ 'no-height': !vm.expanded[event.type] }"
  lock-height="no-height"
)
  hr

  p {{event.lastMessageInfo.content}}

  button.wider.action(ng-if="event.lastMessageInfo.publisherInfo.isCopilot == true" ui-sref="messaging({ id: vm.workId, threadId: event.lastMessageInfo.threadId })") reply

  button.wider.action(ng-if="event.lastMessageInfo.publisherInfo.isCopilot == false" ui-sref="messaging({ id: vm.workId, threadId: event.lastMessageInfo.threadId })") send another message


